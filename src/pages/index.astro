---
import Layout from '../layouts/Layout.astro';
import SkillsPanel from '../components/SkillsPanel.astro';
import Navbar from '../components/Navbar.astro';
import { BiLogoLinkedin, BiLogoGmail } from "react-icons/bi";
import { PiGithubLogoFill } from "react-icons/pi";


---

<Layout title='Portfolio - Home'>
	<Navbar />
	<main>
		<section id='home'>
			<h1>Alonso Acu√±a<br>Full-Stack Web Developer</h1>

			<div class='about'>
				<h2>
					{"About Me"}
				</h2>
				<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Tenetur natus ex in autem dolorem 
					ab veniam, repellendus deleniti non delectus sequi, soluta omnis sint, laborum consectetur 
					adipisci! Odio, non animi!
				</p>
			</div>

			<div class='contact-resume-box'>
				<h2>
					{'Contacts'}
				</h2>
				<ul class='contact-resume-container'>
					<li>
						<a target='_blank' href='https://www.linkedin.com/in/alonso-acu%C3%B1a-guerrero-b5a014271/'
							class='contact-item'>
							<BiLogoLinkedin />
						</a>
					</li>
					<li>
						<a target='_blank' href='https://github.com/AlonsoAcunaGuerrero' 
							class='contact-item'>
							<PiGithubLogoFill />
						</a>
					</li>
					<li>
						<a target='_blank' href='mailto:alonso.ag555@gmail.com' 
							class='contact-item'>
							<BiLogoGmail />
						</a>
					</li>
				</ul>
			</div>
		</section>
	</main>

	<section id='skills'>
		<SkillsPanel title='Skills' />
	</section>
</Layout>

<style>
	section {
		padding-top: 60px;
		min-height: 100vh;
		background-color: rgb(20, 20, 20);
		color: white;
	}

	#home {
		display: flex;
		flex-direction: column;
		/* background: radial-gradient(circle at center, white 0%, rgba(223, 223, 223, 0) 5%, rgb(20, 20, 20) 40%); */
		background-color: rgb(20, 20, 20);;
		position: relative;
		justify-content: space-between;
		padding: 60px 1em 1em 1em;
		
	}

	#home > h1 {
		font-size: 2em;
		text-align: center;
		width: 100%;
		opacity: 1;
		transition: opacity 2000ms ease-in 50ms;
	}

	@starting-style {
		#home > h1 {
			opacity: 0;
		}
	}

	.about {
		display: flex;
		flex-direction: column;
		width: 100%;
		background-color: white;
		color: black;
		padding: 0.5em;
		border-radius: 1em;
		outline-offset: 4px;
		outline-color: white;
		outline-style: solid;
		gap: 0.25em;
		max-height: 320px;
		transition: max-height 600ms ease-out 50ms;
	}

	.about > h2 {
		font-size: 1.5em;
		width: 100%;
		text-align: center;
		opacity: 1;
		transition: opacity 200ms ease-out 700ms;
	}

	.about > p {
		font-size: 1.4em;
		text-align: center;
		opacity: 1;
		transition: opacity 200ms ease-in 800ms;
	}

	@starting-style {
		.about {
			max-height: 0;
		}

		.about > h2 {
			opacity: 0;
		}

		.about > p {
			opacity: 0;
		}
	}

	.contact-resume-box {
		display: flex;
		flex-direction: column;
		background-color: white;
		padding: 0.5em;
		gap: 0.5em;
		border-radius: 1em;
		align-items: center;
		outline-offset: 4px;
		outline-color: white;
		outline-style: solid;
		max-width: auto;
		transition: max-width 400ms ease-out 700ms;
	}

	.contact-resume-box > h2 {
		display: flex;
		color: black;
		font-size: 1.5em;
		opacity: 1;
		transition: opacity 200ms ease-out 800ms;
	}

	.contact-resume-container {
		display: flex;
		flex-direction: row;
		padding: 0.5em;
		gap: 0.5em;
		border-radius: 1em;
		opacity: 1;
		transition: opacity 200ms ease-in 900ms;
	}

	@starting-style {
		.contact-resume-box {
			max-width: 0;
		}

		.contact-resume-box > h2 {
			opacity: 0;
		}

		.contact-resume-container {
			opacity: 0;
		}
	}

	.contact-item {
		display: flex;
		background-color: black;
		padding: 0.35em;
		border-radius: 25%;
		transition: transform 75ms ease-in-out 45ms;
	}

	.contact-item:hover {
		transform: scale(1.15);
	}

	.contact-item > svg {
		font-size: 1.75em;
		color: white;
	}

	@media (min-width: 768px) {
		.about > p {
			font-size: 1.25em;
		}

		#home > h1 {
			font-size: 3.5em;
			position: absolute;
			text-align: center;
			left: 0px;
			right: 0px;
		}

		.about {
			font-size: 1em;
			position: absolute;
			left: 1.5em;
			bottom: 1.5em;
			width: 250px;
		}

		.contact-resume-box {
			font-size: 1em;
			position: absolute;
			right: 1.5em;
			bottom: 1.5em;
		}
	}
</style>